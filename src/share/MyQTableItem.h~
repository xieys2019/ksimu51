#ifndef MYQTABLEITEM_H
#define MYQTABLEITEM_H

#include <qtable.h>

class MyQTableItem : public QTableItem
{
	public:
		MyQTableItem(QTable *table, EditType et, int alignment);
		MyQTableItem(QTable * table, EditType et, int alignment, const QString & text);
		MyQTableItem(QTable *table, EditType et, int alignment, const QString & text, const QPixmap & p);
		~MyQTableItem();
	protected:
		int alignment(void) const{return alignment_;};
	private:
		int alignment_;
};

#endif
